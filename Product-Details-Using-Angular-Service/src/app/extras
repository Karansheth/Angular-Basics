
  deleteProduct(post) {
    this.service.deleteProduct(post)
      .subscribe(response => {
        let index = this.products.indexOf(post);
        this.products.splice(index, 1);
      });
  }

<td>
      <button align = 'center' style="background-color: yellow;color:red; width:150px;
      height:60px;" (click)="deleteProduct(productInfo)">
        Delete
      </button>
</td>


  deleteProduct(prodCode) {
    return this.http.delete('/assets/Product.json' + '/' + prodCode);
  }
